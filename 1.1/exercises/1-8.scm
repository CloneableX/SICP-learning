(define (cube-root x)
  (define (good-enough? guess)
    (< (abs (/ (- guess (improve guess))
	       guess))
       0.001))
  (define (improve guess)
    (/ (+ (/ x (square guess))
	  (* 2 guess))
       3))
  (define (cube-root-iter guess)
    (if (good-enough? guess)
	guess
	(cube-root-iter (improve guess))))
  (cube-root-iter 1.0))

(cube-root 27)
(cube-root 0.0000001)
